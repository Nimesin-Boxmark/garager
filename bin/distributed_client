#!/usr/bin/env ruby

require_relative "../lib/environment"
require 'drb/drb'

# The URI to connect to
SERVER_URI="druby://linkleaf.com:8787"

garage = Garage.current
logger = garage.logger

ip = Socket.ip_address_list.detect{ |ip| !ip.ipv4_loopback? }
puts "ip: #{ip.inspect}"
name = `hostname`.chomp
name << "|#{ip.ip_address}" if ip
key = "533e98315f3de22fc4006674285aa837"

loop do
  begin
    server = DRbObject.new_with_uri(SERVER_URI)

    token = server.register(name: name, key: key)
    logger.info "Client token: #{token}"

    loop do
      value = server.listen(token)
      logger.info "Received command: #{value}"
      garage.toggle if value == "open"
    end

  rescue DRb::DRbConnError => e
    logger.error e.inspect
    logger.info e.backtrace.join("\n")
    sleep 10
  end
end
