#!/usr/bin/env ruby

# INSTALL: sudo update-rc.d -f garage_init start 4

name = "garager"
dir = "/home/pi/#{name}"
cmd = "bin/client"
pid = "/var/run/#{name}.pid"

begin
  case ARGV.first
  when /start/
    options = [
      "--start",
      "--background",
      "--pidfile #{pid}",
      "--make-pidfile",
      "--exec #{cmd}"
    ]
    daemon_cmd = "start-stop-daemon #{options.join(' ')}"
    puts daemon_cmd
    exec daemon_cmd
  when /stop/
    exec "start-stop-daemon --stop --pidfile #{pid}"
  end
rescue => e
  puts %[#{e.class.to_s}\n#{e.backtrace.join("\n")}]
end
