#!/usr/bin/env ruby

# INSTALL: sudo update-rc.d -f garage_init start 4

DIR="/home/pi/perfect_pi"

begin
  case ARGV.first
  when /start/
    Dir.chdir(DIR)
    command = "/usr/local/bin/rackup --daemonize --port 3000"
    exec command
  end
rescue => e
  puts %[#{e.class.to_s}\n#{e.backtrace.join("\n")}]
end
